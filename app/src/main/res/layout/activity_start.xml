<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#f9ffe3">

    <!-- Логотип -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_400sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="-150dp"
        android:src="@drawable/logo_vision_non_confirm_3"
        android:layout_centerHorizontal="true"/>

    <!-- Описание -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Это приложение имитирует зрение людей с глазными заболеваниями и разных животных, позволяя увидеть мир их глазами."
        android:textColor="#721c1c"

        android:gravity="center"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/_20ssp"
        android:fontFamily="@font/sf_semibold"
        android:paddingHorizontal="24dp"/>

    <!-- Кнопка запуска -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:text="Запуск"
        android:textSize="24sp"
        android:padding="16dp"
        android:layout_marginTop="60dp"
        android:textColor="#f9ffe3"
        android:background="@drawable/btn_ripple"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
